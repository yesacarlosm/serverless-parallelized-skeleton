{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Lambda",
            "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
            "args": [
                "invoke",
                "local",
                "-f",
                "myFunction"
            ],
            // Required, otherwise Serverless thinks stdin is a stream and tries to read options from it.
            "console": "integratedTerminal"
        }
    ]
}